{% extends '::/AdminBase.html.twig' %}

{% block body %}
    <div class="card-body" id="bar-parent">
        {{ form_start(form) }}
        <form  id="form_sample_1" method="post" class="form-horizontal" novalidate="novalidate">
            <div class="form-body">
                <div class="form-group row">
                    <label class="control-label col-md-3">Name
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-5">
                        <input type="text"  name="nom" data-required="1" placeholder="enter nom" value="{{ produit.IdProduit.nom }}" class="form-control input-height"> </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3">Description
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-5">
                        <input type="text" name="description" data-required="1" placeholder="enter Description" value="{{ produit.IdProduit.description }}" class="form-control input-height"> </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3">Marque
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-5">
                        <input type="text" name="marque" data-required="1" placeholder="enter marque" value="{{ produit.marque }}" class="form-control input-height"> </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3">Prix
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-5">
                        <input name="prix" type="text" placeholder="mobile number" value="{{ produit.IdProduit.prix }}" class="form-control input-height"> </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3">mode Administration
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-5">
                        <select  class="form-control select2 select2-hidden-accessible" name="modeA">
                            <option>Adulte</option>
                            <option>Enfant</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3">Forme
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-5">
                        <select class="form-control select2 select2-hidden-accessible input-height" name="forme">
                            <option>Adulte</option>
                            <option>Enfant</option>
                        </select></div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3">Pour Qui
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-5">
                        <select class="form-control select2 select2-hidden-accessible input-height" name="PourQui">
                            <option>Adulte</option>
                            <option>Enfant</option>

                        </select>
                    </div>
                </div>


                <div class="form-group row">
                    <label class="control-label col-md-3">Product Picture
                    </label>
                    <div class="compose-editor">
                        {{ form_row(form.image) }}
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="offset-md-3 col-md-5">
                            <button type="submit" value="submit" name="submit" class="btn btn-primary btn-block">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
    </div>
{% endblock %}
