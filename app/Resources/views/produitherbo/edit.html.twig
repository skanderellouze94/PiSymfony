{% extends '::/AdminBase.html.twig' %}

{% block body %}
    <div class="card-body" id="bar-parent">
        {{ form_start(form) }}
            <div class="form-body">
                <div class="form-group row">
                    <label class="control-label col-md-3">Name
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-5">
                        <input type="text"  name="nom" data-required="1" placeholder="enter nom" value="{{ produitHerbo.IdProduit.nom }}" class="form-control input-height"> </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3">Description
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-5">
                        <input type="text" name="description" data-required="1" placeholder="enter Description" value="{{ produitHerbo.IdProduit.description }}" class="form-control input-height"> </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3">Marque
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-5">
                        <input type="text" name="marque" data-required="1" placeholder="enter marque" value="{{ produitHerbo.marque }}" class="form-control input-height"> </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3">Prix
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-5">
                        <input name="prix" type="text" placeholder="mobile number" value="{{ produitHerbo.IdProduit.prix }}" class="form-control input-height"> </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3">Categorie
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-5">
                        <input name="categorie" type="text" placeholder="mobile number" value="{{ produitHerbo.categorie }}" class="form-control input-height">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3">Bio
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-5">
                        {% if produitHerbo.bio == 1 %}
                            <input name="bio" type="checkbox"  checked class="form-control input-height">

                        {% else %}
                         <input name="bio" type="checkbox"   class="form-control input-height">

                        {% endif %}
                    </div>
                </div>

                <div class="form-group row">
                    <label class="control-label col-md-3">Product Picture
                    </label>
                    <div class="compose-editor">
                        {{ form_row(form.image) }}
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="offset-md-3 col-md-5">
                            <button type="submit" value="submit" name="submit" class="btn btn-primary btn-block">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
      {{ form_end(form) }}
    </div>

{% endblock %}
