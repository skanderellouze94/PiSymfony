{% extends '::/AdminBase.html.twig' %}
 {% block title %}
     Ajouter Produit Para
 {% endblock title %}
 {% block titleP %}
     Ajouter Produit Para
 {% endblock %}

{% block script %}
    <link href="{{ asset('assets/back/css/formlayout.css') }}" rel="stylesheet" type="text/css" />

{% endblock script %}

{% block body %}
    <div class="card-body" id="bar-parent">
{{ form_start(form) }}
        <div class="form-body">
            <div class="form-group row  margin-top-20">
                <label class="control-label col-md-3">Nom
                    <span class="required"> * </span>
                </label>
                <div class="col-md-5">
                    <div class="input-icon right">
                        <i class="fa"></i>
                        <input type="text" class="form-control input-height" name="nom" /> </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">Description
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-5">
                    <input type="text" name="description" data-required="1" placeholder="enter Description"  class="form-control input-height"> </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">Marque
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-5">
                    <input type="text" name="marque" data-required="1" placeholder="enter marque"  class="form-control input-height"> </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">Prix
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-5">
                    <input name="prix" type="number" placeholder="prix"  aria-required="true" aria-invalid="true" aria-describedby="number-error"  class="form-control input-height">
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">mode Administration
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-5">
                    <select class="form-control select2 select2-hidden-accessible" name="modeA">
                        <option>Adulte</option>
                        <option>Enfant</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">Forme
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-5">
                    <select class="form-control select2 select2-hidden-accessible input-height" name="forme">
                        <option>Adulte</option>
                        <option>Enfant</option>
                    </select></div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">Pour Qui
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-5">
                    <select class="form-control select2 select2-hidden-accessible input-height" name="PourQui">
                        <option>Adulte</option>
                        <option>Enfant</option>

                    </select>
            </div>
            </div>


            <div class="form-group row">
                <label class="control-label col-md-3">Produit image
                </label>
                <div class="compose-editor">
                    {{ form_row(form.image) }}
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="offset-md-3 col-md-5">
                        <button type="submit" value="submit" name="submit" class="btn btn-primary btn-block">Submit</button>

                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}

    </div>
{% endblock %}

{% block javascript %}
    <script src="{{ asset('assets/back/jquery-validation/js/jquery.validate.min.js') }}" ></script>
    <script src="{{ asset('assets/back/jquery-validation/js/additional-methods.min.js')}}" ></script>
    <script src="{{ asset('assets/back/form-validation.js')}}"></script>
{% endblock %}
