{% extends '::/AdminBase.html.twig' %}
{% block pagetitle %}
    {{ produitPharmaceutique.IdProduit.nom }}
{% endblock %}
{% block titleP %}
    Produit {{ produitPharmaceutique.IdProduit.nom }}
{% endblock %}
    {% block script %}
        <link href="{{ asset('css/seif.css') }}" rel="stylesheet"/>
    {% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card card-topline-aqua">
                <div class="section">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="product-image-large">
                                    <img style="max-width: 100%;" src="{{ asset('/uploads/images/products/') }}{{ produitPharmaceutique.IdProduit.image }}">
                                </div>
                            </div>
                            <div class="col-sm-6 product-details">
                                <h1 style="color: #00C0EF;">{{ produitPharmaceutique.IdProduit.nom }}</h1>
                                <h5>Description :</h5>
                                <p>
                                    {{ produitPharmaceutique.IdProduit.description }}
                                </p>
                                <p><strong>Prix: </strong>{{ produitPharmaceutique.IdProduit.prix }}</p>
                                <p><strong>Marque: </strong>{{ produitPharmaceutique.marque }}</p>
                                <p><strong>Forme: </strong>{{ produitPharmaceutique.forme }}</p>
                                <p><strong>Mode D'Administration: </strong>{{ produitPharmaceutique.pourqui }}</p>
                                <p><strong>Pour Qui: </strong>{{ produitPharmaceutique.modeAdministration }}</p>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-6">
                                <a href="{{ path('produitpharmaceutique_edit',{idProduit : produitPharmaceutique.idProduit.idProduit}) }}">
                                    <button type="button" class="btn btn-primary btn-block">Edit</button>
                                </a>
                            </div>
                            <div class="col-sm-6">
                                <a href="{{ path('produitpharmaceutique_delete',{idProduit : produitPharmaceutique.idProduit.idProduit}) }}">
                                    <button type="button" class="btn btn-danger btn-block">Delete</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    </div>

{% endblock %}
